{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["es6", "es7", "dom", "es5", "es2017.object"],
    "baseUrl": "src",
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "files": [
    "webpack.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
